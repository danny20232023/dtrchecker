modules = ["nodejs-20", "php-8.2", "web"]
run = "npm run start"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node server.js"]
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "TypeScript Build & Serve"

[[workflows.workflow]]
name = "Start Frontend"
author = 45450346
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "PHP Server"
author = 45450346
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 index.php"

[[workflows.workflow]]
name = "TypeScript Build & Serve"
author = 45450346
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[ports]]
localPort = 5000
externalPort = 80
